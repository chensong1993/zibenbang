<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui6"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hui6"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_back"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="60dp"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space"
                    android:background="@drawable/ic_go_back" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="全站搜索"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_seek"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/space"
            android:layout_marginTop="40dp"
            android:background="@color/white">


          <!--  <EditText
                android:id="@+id/et_seek"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                android:background="@null"
                android:hint="搜索"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingLeft="@dimen/space"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColorHint="@color/hui7"
                android:textSize="12dp" />

-->
            <ImageView
                android:id="@+id/img_seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space"
                android:transitionName="search"
                android:src="@drawable/ic_seek" />

           <!-- <ImageView
                android:id="@+id/imgcache"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:src="@mipmap/ic_minoff"
                android:visibility="gone" />-->
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="指定搜索内容"
            android:textColor="@color/hui7"
            android:textSize="12dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_search"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="140dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zixun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="资讯"
            android:textColor="@color/blue"
            android:textSize="12dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/hui7" />

        <TextView
            android:id="@+id/tv_hangqing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="行情"
            android:textColor="@color/blue"
            android:textSize="12dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/hui7" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="作者"
            android:textColor="@color/blue"
            android:textSize="12dp" />

    </LinearLayout>
</RelativeLayout>