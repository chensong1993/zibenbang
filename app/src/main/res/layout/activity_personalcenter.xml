        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_slidably_list_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space"
                android:text="@string/x_user_name"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/tv_slidably_list_name"
                android:gravity="center_vertical"
                android:text="@string/x_bukexiugai"
                android:textColor="@color/hui2" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:maxLength="12"
                android:paddingRight="@dimen/space"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/hui2"
                android:textSize="14dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/rl_nickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space"
                android:text="@string/x_nickname"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/img_icon_nicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_keyboard_arrow_right_black_36dp"
                android:backgroundTint="@color/hui7" />


            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_toLeftOf="@id/img_icon_nicheng"
                android:gravity="center_vertical"
                android:text=""
                android:transitionName="portrait_name"
                android:textColor="@color/hui2"
                android:textSize="14dp" />
        </RelativeLayout>


       <TextView
             android:layout_width="match_parent"
             android:layout_height="1dp" />

         <RelativeLayout
             android:id="@+id/rl_pwd"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:background="@color/white">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:gravity="center_vertical"
                 android:paddingLeft="@dimen/space"
                 android:text="@string/x_change_pwd"
                 android:textColor="@color/black"
                 android:textSize="14dp" />


             <ImageView
                 android:id="@+id/img_icon_pwd"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:background="@mipmap/ic_keyboard_arrow_right_black_36dp"
                 android:backgroundTint="@color/hui7" />
         </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/x_quit"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>