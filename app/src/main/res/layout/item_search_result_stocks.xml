<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_stock"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_guanzhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_search_stockname"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_search_stockcode"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/tv_search_stockname"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="000000"
            android:textSize="12dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_search_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/weiguanzhu"
        android:gravity="center"
        android:padding="2dp"
        android:text="+关注"
        android:textColor="@color/white"
        android:textSize="12dp" />

</RelativeLayout>