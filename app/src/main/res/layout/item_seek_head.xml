<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:padding="@dimen/space">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_go_back" />


        <EditText
            android:id="@+id/et_seek"
            android:layout_width="235dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/img_back"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/x_search_zixun"
            android:imeOptions="actionSend"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:text="@string/x_cancel"
            android:textColor="@color/blue"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_xinxi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_quxiao"
            android:gravity="center_vertical|right"
            android:text="@string/x_search_quanbu"
            android:textColor="@color/blue"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/imgcache"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_xinxi"
            android:src="@mipmap/ic_minoff" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_xinxi"
            android:background="@color/hui7" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hui" />
</LinearLayout>