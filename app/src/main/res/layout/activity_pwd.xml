<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hui6"
        android:orientation="vertical">

        <include layout="@layout/item_activity_head_vip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/hui6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_old_pwd"
                android:layout_width="73dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space"
                android:text="@string/x_old_pwd"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/tv_old_pwd"
                android:background="@null"
                android:hint="@string/x_s_old_pwd"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="@color/hui2" />

            <ImageView
                android:id="@+id/imgcache"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:src="@mipmap/ic_minoff"

                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hui6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_new_pwd"
                android:layout_width="73dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space"
                android:text="@string/x_new_pwds"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/tv_new_pwd"
                android:background="@null"
                android:hint="@string/x_s_new_pwds"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="@color/hui2" />

            <ImageView
                android:id="@+id/imgcache1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:src="@mipmap/ic_minoff"

                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hui6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_confirm_pwd"
                android:layout_width="73dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space"
                android:text="@string/x_confirm_ped"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_confirm_pwd"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/tv_confirm_pwd"
                android:background="@null"
                android:hint="@string/x_once_more"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="@color/hui2" />

            <ImageView
                android:id="@+id/imgcache2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:src="@mipmap/ic_minoff"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>