<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/img_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@mipmap/ic_off" />

    <RelativeLayout
        android:id="@+id/rl_xinsanban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_icon_blue_ipo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_xinsanban"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tv_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:text="登录"
            android:textColor="@color/hui2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_load"
            android:background="#999" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_load"
            android:background="#999" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dengluzhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_load">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:background="@drawable/dialog"
            android:hint="@string/x_login_phone_number"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:textColorHint="@color/hui2" />

        <ImageView
            android:id="@+id/img_ipone_off"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@mipmap/ic_minoff"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/et_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/dialog"
            android:hint="@string/x_login_pwd"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColorHint="@color/hui2" />

        <ImageView
            android:id="@+id/img_pwd_off"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/et_phone"
            android:layout_marginRight="50dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/ic_minoff"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/et_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="12dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="@string/x_login"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_findpwdandregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_dengluzhuce"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tv_wangpwd"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="@string/x_login_forget_pwd"
            android:textColor="@color/hui1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="@string/x_register"
            android:textColor="@color/hui1"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shejiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_findpwdandregister"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp">

        <TextView
            android:id="@+id/tv_shejiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:text="@string/x_login_zhanghao"
            android:textColorHint="@color/hui2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_shejiao"
            android:background="@color/hui2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_shejiao"
            android:background="#999" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_shejiao"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_share_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_weixin" />

        <ImageView
            android:id="@+id/img_share_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_weibo" />

        <ImageView
            android:id="@+id/img_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qq" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_zd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/transparent_background" />

    <TextView
        android:id="@+id/tv_auto_jump"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:gravity="center"
        android:text="自动跳转,请稍等..."
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>
